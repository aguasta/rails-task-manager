<div class="bigcontainer">
<h1 class="container"> Task: <%=@task.title  %></h1>

<div class="container">
    <% if @task.completed == true %>
<p> This task is completed ✅</p>
    <% else %>
<p> This task is not completed yet ❌</p>
    <% end %>

</div>

<h5 class="container">Details: <%= @task.details  %> </h5> 

<br>
<div class="container">
<%= link_to("Click to Edit", edit_task_path(@task)) %> 
</div>


<h4 class="container">
<a href="/tasks">Back to all Tasks</a>
</h4>

</div>
