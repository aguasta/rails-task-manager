<h1 class="container"> Task: <%=@task.title  %></h1>

<div class="container">
    <% if @task.completed == true %>
<h4> This task is completed ✅</h4>
    <% else %>
<h4> This task is not completed yet ❌</h4>
    <% end %>

</div>
<br>
<h5 class="container">Details:</h5> 
<p class="container">
<%= @task.details  %>
</p>

<div class="container">
<%= link_to("Click to Edit", edit_task_path(@task)) %> 
</div>
<div class="container">
<%= link_to("Click to Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure?"}) %>
</div>






<h5 class="container">
<a href="/tasks">Back to all Tasks</a>
</h5>