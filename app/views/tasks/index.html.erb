
<div class="container">

<h1>All Tasks</h1>
</div>

<div class="container">

<ul>
<% @tasks.each do |task| %>
    <% if task.completed == true %>
<li>  <%= link_to(task.title, task_path(task))  %> - ✅</li>
    <% else %>
<li>  <%= link_to(task.title, task_path(task))  %> -  ❌</li>
    <% end %>
<% end %>

</ul>

</div>

<h4 class="container">
<a href="/tasks/new">Create new task</a>
</h4>



