<div class="bigcontainer">

<h1 class="container"> Edit Task  : <%=@task.title  %></h1>

<div class="container">
<%= form_for(@task) do |f|  %>
    <%= f.label :title  %>
    <%= f.text_field :title  %>
    <%= f.label :details  %>
    <%= f.text_field :details  %>
    <%= f.label :completed  %>
    <%= f.check_box :completed %>
     <%= f.submit  %>
<% end %>
</div>


